<p id="notice"><%= notice %></p>
<div id="post_title"><%= @post.is_request ? "[Request]" : "[Offer]" %> <%= @post.title %></div>
<div id="post_fields">
  <%= @post.content %>
  <br>
  <p>
  <strong>Location:</strong>
  <%= @post.location %><br>
  <strong>Posted time:</strong>
  <%= @post.created_at %><br>
  <strong>Delete at:</strong>
  <%= (@post.created_at + @post.ttl) %><br>
  </p>

  <p align="right">
    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </p>

</div>
