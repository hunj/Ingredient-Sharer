<!DOCTYPE html>
<html>
<head>
  <title>IngredientSharer</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:200" rel="stylesheet">
</head>
<body>

<% if user_signed_in? %>
    <div id="header">Logged in as <%= link_to current_user.username, current_user %> (<%= link_to 'edit', edit_user_registration_url %>) | <%= link_to('Sign out', destroy_user_session_path, :method => :delete) %></div>
<% end %>
<% if !alert.nil? %>
    <div id="notice"><%= alert %></div>
<% end %>
<% if !notice.nil? %>
    <div id="notice"><%= notice %></div>
<% end %>
<%= yield %>
</body>
</html>
